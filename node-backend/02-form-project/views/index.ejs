    <h1>Validation 적용하기</h1>
    <form action="/val" method="post">
        아이디<input type="text" name="id" pattern="^([a-z0-9]){5,}$" required/>
        비밀번호<input type="password" name="pw" oninput="validCheckPw(this)" required/> 
        <div id="error-password"></div>
        전화번호<input type="text" name="phone" pattern="^010-[0-9]{4}-[0-9]{4}$" placeholder="010-0000-0000" required/>
        이름<input type="text" name="name" required />
        <fieldset>
            <legend>성별</legend> 
            <input type = 'radio' name="gender" value="여자" required/> 여자
            <input type = 'radio' name="gender" value="남자" required/> 남자
        </fieldset> 
        <br>
        <button type="'submit">제출</button>
    </form>

    <script>
        function validCheckPw(el) {
            const regexPw2 = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[$@$!%*#?&])[A-Za-z\d$@$!%*#?&]{8,}$/
            const value2 = el.value 
            const error2 = document.getElementById("error-password")
            // regexPw.test("검사하고 싶은 값") => true or false를 return
            if(regexPw2.test(value2)){
                console.log("정규식 일치")
            } else {
                error2.innerHTML = "영어 소문자, 대문자, 숫자, 특수문자를 모두 한 번 이상은 사용한 8글자 이상 입력"
                console.log("정규식 불일치")
            }
        }
    </script>

